<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/unit_album_width"
        android:layout_height="@dimen/unit_album_height">

    <ImageView
            android:id="@+id/albumLogo"
            android:layout_width="@dimen/unit_0dp"
            android:layout_height="@dimen/unit_album_width"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/album_logo"/>

    <TextView
            android:id="@+id/albumTitle"
            android:layout_width="@dimen/unit_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/unit_1x"
            app:layout_constraintTop_toBottomOf="@+id/albumLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/artistTitle"
            android:layout_width="@dimen/unit_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorLightGrey"
            app:layout_constraintTop_toBottomOf="@+id/albumTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />


</android.support.constraint.ConstraintLayout>